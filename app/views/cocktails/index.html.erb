<div class="banner text-center" style="background-image: url('https://wallpaperscraft.com/image/cocktail_olive_glass_spray_black_background_77828_3840x2160.jpg')">
  <div class="banner-gradient"></div>
  <div class="banner-content">
    <h1>Welcome on the cocktail fabric !</h1>
    <p>you cand find and add great cocktails</p>
    <%= link_to "Create a cocktail", new_cocktail_path, class: "btn btn-primary btn-lg" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <%= render "card", cocktail: cocktail %>
      </div>
    <% end %>
  </div>
</div>

